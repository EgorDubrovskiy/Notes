
<form method="post" class="p-4">
    <input type="hidden" name="Id" value="@ViewBag.User.Id" />
    <div class="form-group" id="authorization-form-group-email">
        <label class="form-control-label">Главный Email</label>
        <input class="form-control " type="email" value="@ViewBag.User.MainEmail" name="MainEmail" />
    </div>
    <div class="form-group" id="authorization-form-group-email">
        <label class="form-control-label">Секретный ключ</label>
        <input class="form-control " type="text" value="@ViewBag.User.SecretKey" name="SecretKey" />
    </div>
    <div class="form-group" id="authorization-form-group-email">
        <label class="form-control-label">Пароль</label>
        <input class="form-control " type="password" value="@ViewBag.User.Password" name="Password" />
    </div>
    <div class="form-group" id="authorization-form-group-email">
        <label class="form-control-label">Email для вост. пароля</label>
        <input class="form-control " type="email" value="@ViewBag.User.RestoringEmail" name="RestoringEmail" />
    </div>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>