@using GridMvc.Html

@*css and js*@
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>

<div class="code-cut">
    @using Notes.Models
    @Html.Grid(DB.db.Notes).Columns(Columns =>
        {
            Columns.Add(c => c.Id).Titled("Id").Filterable(true);
            Columns.Add(c => c.Title).Titled("Зоголовок").Filterable(true);
            Columns.Add(c => c.Description).Titled("Описание").Filterable(true);
            Columns.Add(c => c.Date).Titled("Дата").Filterable(true);
            Columns.Add(c => c.UserId).Titled("Id пользователя").Filterable(true);
            Columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .SetWidth(30)
                .RenderValueAs(o => Html.ActionLink("Edit", "EditNote", new { id = o.Id }));
            Columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .SetWidth(30)
                .RenderValueAs(o => Html.ActionLink("Delete", "DeleteNote", new { id = o.Id }));
        })

    <button type="button" class="btn btn-light">@Html.ActionLink("Add", "AddNote")</button>

</div>